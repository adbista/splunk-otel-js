{
  "name": "@splunk/otel-esbuild-plugin-node",
  "version": "1.0.0",
  "description": "Splunk OpenTelemetry esbuild plugin for Node.js",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
      ".": {
        "types": "./dist/cjs/index.d.ts",
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
      }
    },
  "files": [
    "build/cjs/**/*.js",
    "build/cjs/**/*.js.map",
    "build/cjs/**/*.d.ts",
    "build/esm/**/*.js",
    "build/esm/**/*.js.map",
    "build/esm/**/*.d.ts"
  ],
  "scripts": {
    "compile": "npm run build:cjs && npm run build:esm && npm run postbuild:pkgjson",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "node --require ts-node/register/transpile-only --test test/**/*.test.ts",
    "postbuild:pkgjson": "node scripts/write-pkg-json.mjs cjs && node scripts/write-pkg-json.mjs esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/signalfx/splunk-otel-js.git"
  },
  "keywords": [
    "esbuild"
  ],
  "author": "Splunk Observability Instrumentals Team <ssg-observability-instrumentals-npm@splunk.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/signalfx/splunk-otel-js/issues"
  },
  "homepage": "https://github.com/signalfx/splunk-otel-js#readme",
  "devDependencies": {
    "@typescript-eslint/typescript-estree": "^8.39.0",
    "ts-node": "^10.9.2",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "esbuild": "^0.25.8",
    "opentelemetry-esbuild-plugin-node": "^4.1.0",
    "semver": "^7.7.2"
  },
  "peerDependencies": {
    "@splunk/otel": "^3.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}
